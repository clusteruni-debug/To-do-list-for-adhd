{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File .claude/hooks/post-edit-security-check.ps1"
          },
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File .claude/hooks/post-edit-sensitive-scan.ps1"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File C:\\Users\\.박준희\\.claude\\skills\\ralph-loop\\loop-controller.ps1"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(git clone:*)",
      "Bash(git add:*)",
      "Bash(git push)",
      "Bash(git fetch:*)",
      "Bash(git commit:*)",
      "Bash(npx serve -p 5050 -l tcp)",
      "Bash(npx serve -p 5050)",
      "Bash(npx playwright:*)",
      "Bash(npm install:*)",
      "Bash(node:*)",
      "Bash(npm ls:*)",
      "Bash(where:*)",
      "Bash(echo:*)",
      "Bash(curl:*)",
      "Bash(ls:*)",
      "Bash(powershell.exe -NoProfile -Command:*)",
      "WebSearch"
    ]
  }
}
